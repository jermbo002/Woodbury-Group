{
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": ["error", "as-needed", { "requireReturnForObjectLiteral": true }],
    "no-extra-semi": ["error"],
	  "quotes": [ "error", "single" ],
    "semi": ["error", "always"],
    "space-before-function-paren": [2, {"named": "never", "anonymous": "never"}],
    "space-in-parens": ["error", "always"],
    "space-infix-ops": ["error", { "int32Hint": false }]
  }
}